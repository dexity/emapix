<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bubble"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bubble">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dp" >
	    <LinearLayout
	        android:id="@+id/bubble_inner"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" 
	        android:orientation="vertical"
            android:paddingLeft="5dp"
	        android:paddingTop="5dp">
	
	        <TextView
	            android:id="@+id/description"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingBottom="5dp"
	            android:textStyle="italic" />        
	        <TextView
	            android:id="@+id/locationname"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingBottom="5dp"
	            android:text="Location" />
	        <Button android:id="@+id/take_photo"
	                android:layout_width="200dp"
	                android:layout_height="50dp"
	                android:gravity="center"
	                android:text="Take Photo"
	                android:textSize="13sp"
	                android:background="@drawable/test_button"
	                />
	        <TextView android:layout_width="match_parent"
	                  android:layout_height="10dp" />        
	        <Button android:id="@+id/select_photo"
	                android:layout_width="200dp"
	                android:layout_height="50dp"
	                android:gravity="center"
	                android:text="Select Photo"
	                android:textSize="13sp"
	                android:background="@drawable/test_button" />
	    </LinearLayout>
	    <ImageView android:layout_width="wrap_content" 
	        android:id="@+id/bubble_close"
	        android:layout_height="wrap_content"  
	        android:src="@drawable/close_bubble" 
	        android:paddingLeft="10dp" 
	        android:paddingBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp" >
        <TextView android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:textColor="#00f"
	        android:text="Request Details"/>         
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:textColor="#f00"
            android:paddingRight="5dp"
            android:text="Remove"
            android:gravity="right"/>        
    </LinearLayout>
</LinearLayout>
